{% extends ('::base.html.twig')  %}
{% block body %}
    {% for flash_message in app.session.flashBag.get('register') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}
    {% if error %}
        <div class="alert alert-dismissible alert-danger">{{error.message | replace({
                "Bad credentials": "Invalid username/password"
            }) }}</div>
    {% endif %}

    <form id="login" method="POST" action="{{ path('login_check') }}" class="form-horizontal">
        <div class="login-form">
            <h1>Welcome to Everything Map</h1>
            <div class="form-group">
                <div class="col-lg-12">
                    <input class="form-control" id="username" name="_username" placeholder="Username" type="text" value="{{ last_username }}" required>
                    <i class="fa fa-user"></i>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-12 log-status">
                    <input class="form-control" id="password" name="_password" placeholder="Password" type="password" required>
                    <i class="fa fa-lock"></i>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-12">
                    <button type="submit" class="log-btn btn btn-primary">Login</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}

